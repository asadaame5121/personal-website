<html>
<head>
  <title>DropGarden</title>
  <link rel="stylesheet" href="/assets/styles.css">
  <link rel="icon" href="/assets/images/favicon.jpeg" type="image/jpeg">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>  

<div class="map-container">
  <div id="map-view"></div>
</div>

<style>
  .map-container {
    width: 100%;
    height: 100vh;
    overflow: hidden;
    position: relative;
  }
  
  #map-view {
    width: 100%;
    height: 100%;
    position: relative;
  }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/6.5.2/browser/pixi.min.js"></script>
<script src="/assets/js/pixi-isometric.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // アイソメトリックマップの初期化
    const isometricMap = new PixiIsometricMap({
      container: '#map-view',
      width: window.innerWidth,
      height: window.innerHeight,
      tileWidth: 64,
      tileHeight: 32,
      mapWidth: 60,
      mapHeight: 40,
      onTileClick: function(tileData) {
        console.log('タイルがクリックされました', tileData);
      }
    });
  });
</script>
</body>
</html>
