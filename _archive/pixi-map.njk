<div class="map-container">
  <div id="map-view"></div>
</div>

<style>
  .map-container {
    width: 100%;
    height: 100vh;
    overflow: hidden;
    position: relative;
  }
  
  #map-view {
    width: 100%;
    height: 100%;
    position: relative;
  }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/6.5.2/browser/pixi.min.js"></script>
<script src="/assets/js/pixi-map.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // PixiJSマップの初期化
    const pixiMap = new PixiMap({
      container: '#map-view',
      width: window.innerWidth,
      height: window.innerHeight,
      tileSize: 64,
      mapWidth: 60,
      mapHeight: 40,
      onTileClick: function(tileData) {
        console.log('タイルがクリックされました', tileData);
      },
      onTileHover: function(tileData, eventType) {
        console.log('タイルホバー', tileData, eventType);
      }
    });
  });
</script>
