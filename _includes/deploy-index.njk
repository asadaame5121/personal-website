<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/styles.css">
    <title>DropGarden</title>
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #F2EFE2; /* イングリッシュガーデンの象牙色 */
            margin: 0;
            padding: 0;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        header {
            background-color: #2E5A30; /* イングリッシュガーデンの緑 */
            color: white;
            padding: 20px 0;
            margin-bottom: 30px;
        }
        
        header h1 {
            margin: 0;
            padding: 0 20px;
        }
        
        .tab-container {
            margin-bottom: 30px;
        }
        
        .tabs {
            display: flex;
            border-bottom: 1px solid #ddd;
        }
        
        .tab {
            padding: 10px 20px;
            cursor: pointer;
            border: 1px solid transparent;
            border-bottom: none;
            background-color: #f9f9f9;
            margin-right: 5px;
            border-radius: 5px 5px 0 0;
        }
        
        .tab.active {
            background-color: #2E5A30; /* イングリッシュガーデンの緑 */
            color: white;
            border-color: #ddd;
        }
        
        .tab-content {
            display: none;
            padding: 20px;
            border: 1px solid #ddd;
            border-top: none;
            background-color: white;
        }
        
        .tab-content.active {
            display: block;
        }
        
        .article-list {
            list-style: none;
            padding: 0;
        }
        
        .article-list li {
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }
        
        .article-list li:last-child {
            border-bottom: none;
        }
        
        .article-date {
            color: #666;
            font-size: 0.9em;
        }
        
        .article-title {
            font-weight: bold;
            font-size: 1.1em;
            margin: 5px 0;
        }
        
        .article-description {
            color: #444;
        }
        
        .daily-log {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            margin-top: 30px;
        }
        
        .daily-log h2 {
            color: #2E5A30; /* イングリッシュガーデンの緑 */
            border-bottom: 2px solid #A991C5; /* イングリッシュガーデンの紫 */
            padding-bottom: 10px;
        }
        
        .log-entry {
            margin-bottom: 20px;
        }
        
        .log-date {
            font-weight: bold;
            color: #D6798E; /* イングリッシュガーデンのピンク */
        }
        
        .log-content {
            margin-top: 10px;
            line-height: 1.8;
        }
        
        footer {
            background-color: #785E49; /* イングリッシュガーデンの茶色 */
            color: white;
            text-align: center;
            padding: 20px 0;
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <header>
        <div class="container">
            <h1>DropGarden</h1>
        </div>
    </header>

    <div class="container">
        <div class="tab-container">
            <div class="tabs">
                <div class="tab active" data-tab="article">記事</div>
                <div class="tab" data-tab="resources">リソース</div>
                <div class="tab" data-tab="glossary">用語集</div>
                <div class="tab" data-tab="books">書籍</div>
            </div>
            
            <div class="tab-content active" id="article">
                <h2>最新の記事</h2>
                <ul class="article-list">
                    {% for article in search.pages("type=article", "date=desc", 10) %}
                    <li>
                        <div class="article-date">{{ article.date | date("yyyy年MM月dd日") }}</div>
                        <div class="article-title"><a href="{{ article.url }}">{{ article.title }}</a></div>
                        <div class="article-description">{{ article.description }}</div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="tab-content" id="resources">
                <h2>リソース</h2>
                <ul class="article-list">
                    {% for resource in search.pages("type=resource", "date=desc", 10) %}
                    <li>
                        <div class="article-date">{{ resource.date | date("yyyy年MM月dd日") }}</div>
                        <div class="article-title"><a href="{{ resource.url }}">{{ resource.title }}</a></div>
                        <div class="article-description">{{ resource.description }}</div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="tab-content" id="glossary">
                <h2>用語集</h2>
                <ul class="article-list">
                    {% for term in search.pages("type=glossary", "title=asc", 10) %}
                    <li>
                        <div class="article-title"><a href="{{ term.url }}">{{ term.title }}</a></div>
                        <div class="article-description">{{ term.description }}</div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="tab-content" id="books">
                <h2>書籍メモ</h2>
                <ul class="article-list">
                    {% for book in search.pages("type=book", "date=desc", 10) %}
                    <li>
                        <div class="article-date">{{ book.date | date("yyyy年MM月dd日") }}</div>
                        <div class="article-title"><a href="{{ book.url }}">{{ book.title }}</a></div>
                        <div class="article-description">{{ book.description }}</div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        
        {{ comp.dailylog() | safe }}
    </div>
    
    <footer>
        <div class="container">
            <p>&copy; 2025 DropGarden</p>
        </div>
    </footer>

    <script>
        // タブ切り替え機能
        document.addEventListener('DOMContentLoaded', () => {
            const tabs = document.querySelectorAll('.tab');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    // アクティブなタブを切り替え
                    document.querySelector('.tab.active').classList.remove('active');
                    tab.classList.add('active');
                    
                    // タブコンテンツを切り替え
                    const tabName = tab.getAttribute('data-tab');
                    document.querySelector('.tab-content.active').classList.remove('active');
                    document.getElementById(tabName).classList.add('active');
                });
            });
        });
    </script>
</body>
</html>
