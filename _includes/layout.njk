<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/styles.css">
    <link rel="icon" href="/assets/images/favicon.jpeg" type="image/jpeg">
    <title>{{ title }}</title>
</head>
<body>
    {{ comp.header() | safe }}
    
    <main>
        <article class="h-entry">
            <h1 class="p-name">{{ title }}</h1>
            
            {% if date %}
            <div class="post-date">
                <time class="dt-published" datetime="{{ date }}">{{ date }}</time>
            </div>
            {% endif %}
            
            {% if category %}
            <div>
                <a href="/category/{{ category }}" class="category-main p-category">{{ category }}</a>
            </div>
            {% endif %}
            
            <div class="e-content">
                {{ content | safe }}
            </div>
            
            {% if tags %}
            <div class="tags">
                {% for tag in tags %}
                <a href="/tags/{{ tag }}" class="p-category">{{ tag }}</a>
                {% endfor %}
            </div>
            {% endif %}
            
            {% if author %}
            <div class="p-author h-card">
                {% if author.photo %}
                <img src="{{ author.photo }}" alt="{{ author.name }}">
                {% endif %}
                <div class="p-author-info">
                    <div class="p-author-name">{{ author.name }}</div>
                    {% if author.bio %}
                    <div>{{ author.bio }}</div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
            
            <div class="post-navigation">
                {% if previousPost %}
                <a href="{{ previousPost.url }}" class="prev-post u-url">← 前の記事</a>
                {% else %}
                <span></span>
                {% endif %}
                
                {% if nextPost %}
                <a href="{{ nextPost.url }}" class="next-post u-url">次の記事 →</a>
                {% else %}
                <span></span>
                {% endif %}
            </div>
        </article>
    </main>
    
    {{ comp.footer() | safe }}
</body>
</html>
