{# タグページ用レイアウト #}
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>タグ「{{ tagName | decodeURIComponent }}」の記事一覧</title>
  <link rel="stylesheet" href="/assets/css/tailwind.css">
</head>
<body>
  <div class="p-4 max-w-xl mx-auto">
    <h2 class="text-xl font-bold mb-4">タグ「{{ tagName | decodeURIComponent }}」の記事一覧</h2>
    {% set pages = search.pages(rawTagName) %}
    {% if pages and pages | length > 0 %}
      <ul class="menu bg-base-100 rounded-box">
        {% for page in pages | sort(attribute="title") %}
          <li class="menu-item">
            <a href="{{ page.url }}">{{ page.title }}</a>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="alert alert-warning">該当する記事が見つかりません。</div>
    {% endif %}
  </div>
</body>
</html>

